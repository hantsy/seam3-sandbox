<?xml version="1.0" encoding="UTF-8"?>
<faces-config xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd"
	version="2.0">
	<converter>
		<converter-for-class>java.lang.Enum</converter-for-class>
		<converter-class>javax.faces.convert.EnumConverter</converter-class>
	</converter>
	<navigation-rule>
		<from-view-id>/post-form.xhtml</from-view-id>
		<navigation-case>
			<from-action>#{postEditAction.save()}</from-action>
			<if>#{true}</if>
			<to-view-id>/posts.xhtml</to-view-id>
			<redirect />
		</navigation-case>
		<navigation-case>
			<from-action>#{postEditAction.save2()}</from-action>
			<if>#{true}</if>
			<to-view-id>/posts.xhtml</to-view-id>
			<redirect />
		</navigation-case>
		<navigation-case>
			<from-action>#{postEditAction.save3()}</from-action>
			<if>#{true}</if>
			<to-view-id>/posts.xhtml</to-view-id>
			<redirect />
		</navigation-case>
		<navigation-case>
			<from-action>#{postEditAction.save4()}</from-action>
			<if>#{true}</if>
			<to-view-id>/posts.xhtml</to-view-id>
			<redirect />
		</navigation-case>
		<navigation-case>
			<from-action>#{postEditAction.cancel()}</from-action>
			<if>#{true}</if>
			<to-view-id>/posts.xhtml</to-view-id>
			<redirect />
		</navigation-case>
	</navigation-rule>
	
	<navigation-rule>
		<from-view-id>/tag-form.xhtml</from-view-id>
		<navigation-case>
			<from-action>#{tagEditAction.save()}</from-action>
			<if>#{true}</if>
			<to-view-id>/tags.xhtml</to-view-id>
			<redirect />
		</navigation-case>
		<navigation-case>
			<from-action>#{tagEditAction.save2()}</from-action>
			<if>#{true}</if>
			<to-view-id>/tags.xhtml</to-view-id>
			<redirect />
		</navigation-case>
		<navigation-case>
			<from-action>#{tagEditAction.save3()}</from-action>
			<if>#{true}</if>
			<to-view-id>/tags.xhtml</to-view-id>
			<redirect />
		</navigation-case>
		<navigation-case>
			<from-action>#{tagEditAction.save4()}</from-action>
			<if>#{true}</if>
			<to-view-id>/tags.xhtml</to-view-id>
			<redirect />
		</navigation-case>
		
		<navigation-case>
			<from-action>#{tagEditAction.save5()}</from-action>
			<if>#{true}</if>
			<to-view-id>/tags.xhtml</to-view-id>
			<redirect />
		</navigation-case>
		<navigation-case>
			<from-action>#{tagEditAction.save6()}</from-action>
			<if>#{true}</if>
			<to-view-id>/tags.xhtml</to-view-id>
			<redirect />
		</navigation-case>
		<navigation-case>
			<from-action>#{tagEditAction.cancel()}</from-action>
			<if>#{true}</if>
			<to-view-id>/tags.xhtml</to-view-id>
			<redirect />
		</navigation-case>
	</navigation-rule>
	<application>
		<resource-bundle>
			<base-name>messages</base-name>
			<var>messages</var>
		</resource-bundle>
	</application>
</faces-config>